module alu_compare (
    input z,
    input v,
    input n,
    input alufn[4],
    output out[16] 
  ) {
  
  always {
  
    // Since only LSB is important
    out = 16b0;
    case (alufn[3:0]) {
    
      // Compare Operations:
      // CMPEQ: A = B
      b0011: out[0] = z;
      // CMLT: A < B
      b0101: out[0] = n ^ v;
      // CMLE: A <= B
      b0111: out[0] = z | (n ^ v);
      default: out[0] = 0;
      
    }
  }
}